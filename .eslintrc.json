{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:mocha/recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "document": "readonly"
  },
  "plugins": [
    "node",
    "promise",
    "mocha",
    "import"
  ],
  "rules": {
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": [
          "electron"
        ]
      }
    ],
    "prettier/prettier": "warn"
  }
}