{
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:jest/recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "document": "readonly"
  },
  "plugins": [
    "promise"
  ],
  "rules": {
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": [
          "electron"
        ]
      }
    ]
  }
}